<odoo>
    <data>
        <record model="ir.ui.view" id="todo_ticket_form_view">
            <field name="name">todo.ticket.form</field>
            <field name="model">todo.ticket</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="number"/>
                            <field name="tag"/>
                            <field name="state"/>
                            <field name="assign_to"/>
                            <field name="description"/>
                            <field name="file"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>