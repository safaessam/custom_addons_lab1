<odoo>
    <data>
        <!-- Action for the Kanban view -->
        <record id="action_todo_tickets_kanban" model="ir.actions.act_window">
            <field name="name">All Tickets</field>
            <field name="res_model">todo.ticket</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a new ticket.
                </p>
            </field>
        </record>

        <!-- Action for the Form view -->
        <record id="action_todo_ticket_form" model="ir.actions.act_window">
            <field name="name">Create Ticket</field>
            <field name="res_model">todo.ticket</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>



    </data>
</odoo>
