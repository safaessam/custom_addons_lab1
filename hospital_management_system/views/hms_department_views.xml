<odoo>
    <data>
        <record id="view_hms_department_form" model="ir.ui.view">
            <field name="name">hms.department.form</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <form string="Department">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="capacity"/>
                            <field name="is_opened"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hms_department_tree" model="ir.ui.view">
            <field name="name">hms.department.tree</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <tree string="Departments">
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                </tree>
            </field>
        </record>

        <record id="action_hms_department_list" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hms.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_hms_department" name="Departments" parent="menu_hms_root" sequence="10" action="action_hms_department_list"/>
    </data>
</odoo>